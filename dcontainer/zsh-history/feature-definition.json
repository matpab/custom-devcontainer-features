{
  "name": "ZSH History",
  "id": "zsh-history",
  "version": "1.0.0",
  "description": "Sets up caching of zsh history",
  "installsAfter": [
    "ghcr.io/devcontainers/features/common-utils"
  ],
  "options": {},
  "dependencies": [],
  "postCreateCommand": {
    "chown-zsh-history": "sudo chown -R vscode:vscode /home/vscode/zsh_history/"
  },
  "mounts": [
    {
      "source": "zsh_history",
      "target": "/home/vscode/zsh_history",
      "type": "volume"
    }
  ],
  "install_command": "echo 'Done'",
  "containerEnv": {
    "HISTFILE": "/home/vscode/zsh_history/.zsh_history"
  },
  "test_scenarios": []
}
